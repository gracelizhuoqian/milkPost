.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  height: 100%;
  color: #444;
}
.icon{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 50rpx;
}
.user-name{
  font-size: 32rpx;

}

.moto{
  font-size: 28rpx;
  line-height: 80rpx;
}
page{
  background-color: #b3d4db;
}
.user-container{
  box-shadow: 1px 1px 5px #6eaebf;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5rpx;
  text-align: center;
  line-height: 80rpx;
  margin-top: 50rpx;
  background-color: #6eaebf;
  
}
.user-container text{
  color: #333;
}

.user-class{
  margin-top: 30rpx;
  font-size: 28rpx;
}
.user-class text{
  margin:0 15rpx;
}
button::after{
    border: none;
}
