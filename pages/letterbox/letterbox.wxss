/* pages/mail/mail.wxss */
page{
  background-color: #f1f2e3; 
}

.banner{
  text-align: center;
  padding-top: 25rpx;
  color: #222;
  margin-bottom: 30px;
  background-color: #f1f2e3; 
  position: fixed;
  z-index: 6;
  width: 100%;
  height: 100rpx;
}

.scroll-content{
  width: 100%;
  padding-top: 100rpx;
  margin-bottom: 50rpx;
}
.new-btn{
  position: absolute;
  right: 60rpx;
  bottom: 50rpx;
  vertical-align: baseline;
  display: flex;
  flex-direction: row;
  
}
.add-icon{
  color: #555;
  box-shadow: 0 0 3px #666;
  border: 1px solid #666;
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  line-height: 44rpx;
  font-size: 44rpx;
  margin-right: 10rpx;
}
.add-text{
  color: #666;
  font-size: 32rpx;
  height: 48rpx;
  line-height: 48rpx;
}
.letter-list{
  width: 80%;
  position: relative;
  height: 160rpx;
  overflow: hidden;
  color: #444;
  margin: 25rpx auto; 
 
}

.panel{
  box-sizing: border-box;
  width: 100%;
  border-radius: 5px;
  padding: 10px;
  box-shadow: 0px 0px 2px #aaa;
  font-size: 28rpx;
  z-index: 5;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  transition: right 0.2s ease-in-out;  
}

.inner{
    position: absolute;
    top: 0; 
    height: 160rpx;   
}
.subject{
  margin-top: 10rpx;
  font-size: 1em;
}
.date{
  margin-bottom: 3rpx;
  text-align: right;
  font-size: 0.9em;
}
.icon{
  position: absolute;
  top: 8rpx;
  right: 8rpx;
}
.inner.del{
    background-color: rgba(204, 51, 51, 0.6);
    width: 180rpx;
    text-align: center;
    line-height: 160rpx;
    z-index: 4;
    right: 0;
    color: #eee;
    border-radius: 5px;  
}
.tips{
  position: fixed;
  bottom: 20rpx;
  left: 25rpx;
  font-size: 25rpx;
  color: #ccc;
  width: 20rpx;
}
.blank{
  position: absolute;
  top: 150rpx;
  left: 50rpx;
  right: 50rpx;
  margin: 0 auto;

}
.blank text{
  display: block;
  text-align: left;
  font-size: 30rpx;
  line-height: 1.8;
  color: #ccc;
  text-indent: 2em;
}