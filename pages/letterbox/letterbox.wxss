/* pages/mail/mail.wxss */
.wrapper{
  width: 100%;
  height: 100%;
 
}
page{
  background-color: #f1f2e3;

 
}

.banner{
  text-align: center;
  margin-top: 25rpx;
  opacity: 0.6;
  margin-bottom: 30px;

}
.new-btn{
  position: absolute;
  right: 60rpx;
  border: 1px solid #666;
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
}
.letter-list{
  width: 80%;
  position: relative;
  height: 100rpx;
  overflow: hidden;

   margin: 25rpx auto; 
 
}

.panel{
  box-sizing: border-box;
  width: 100%;
  border-radius: 5px;
  padding: 10px;
  box-shadow: 0px 0px 2px #aaa;
  font-size: 28rpx;
  z-index: 5;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  transition: right 0.2s ease-in-out;
 
  
}

.inner{
    position: absolute;
    top: 0; 
    height: 80rpx;
  
   
}

.inner.del{
    background-color: #e64340;
    width: 180rpx;
  
    text-align: center;
    line-height: 80rpx;
    z-index: 4;
    right: 0;
    color: #fff;
    border-radius: 5px;
    
}