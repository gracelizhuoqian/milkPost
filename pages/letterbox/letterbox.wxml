<!--pages/mail/mail.wxml-->
 <view class='wrapper'>
    <view class="banner">
        <text>我的信箱</text>
        <text class='new-btn' catchtap="onNewTap">+</text>
    </view>
    <view class="letter-list" wx:for="{{letterList}}" wx:for-item="item" wx:for-index="idx"  wx:key="item.index">
        
        <view class="panel inner" catchtap="onLetterTap" data-index="{{item.index}}" data-idx="{{idx}}" style="background:{{idx%2===0?'#ec9193':'#d4b483'}};{{item.txtStyle}}"  bindtouchstart="touchS" bindtouchmove="touchM" bindtouchend="touchE">
        {{item.title}}
        </view>
         <view data-index="{{item.index}}"  bindtap = "delItem" class="inner del">删除</view> 

</view>
</view> 

